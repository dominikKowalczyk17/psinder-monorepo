{
  "name": "psinder-monorepo",
  "version": "1.0.0",
  "description": "Psinder monorepo containing mobile app and backend API",
  "private": true,
  "workspaces": [
    "mobile",
    "api"
  ],
  "scripts": {
    "mobile:dev": "npm run start --workspace=mobile",
    "mobile:build": "npm run build --workspace=mobile",
    "mobile:test": "npm run test --workspace=mobile",
    "mobile:lint": "npm run lint --workspace=mobile",
    "api:dev": "cd api && mvn spring-boot:run",
    "api:build": "cd api && mvn clean package",
    "api:test": "cd api && mvn test",
    "dev": "concurrently \"npm run mobile:dev\" \"npm run api:dev\"",
    "build": "npm run mobile:build && npm run api:build",
    "test": "npm run mobile:test && npm run api:test",
    "lint": "npm run mobile:lint",
    "clean": "npm run clean --workspaces && cd api && mvn clean",
    "install:all": "npm install && cd api && mvn dependency:resolve"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/psinder-monorepo.git"
  },
  "keywords": [
    "monorepo",
    "react-native",
    "spring-boot",
    "psinder"
  ],
  "author": "dkowalczyk",
  "license": "MIT"
}